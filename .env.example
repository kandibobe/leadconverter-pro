# PostgreSQL Settings
POSTGRES_SERVER=db
POSTGRES_USER=lcp_user
POSTGRES_PASSWORD=lcp_password
POSTGRES_DB=lcp_db
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_SERVER}/${POSTGRES_DB}

# Backend (FastAPI) Settings
SECRET_KEY=your_super_secret_key_32_chars_long_replace_me
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
BACKEND_CORS_ORIGINS=*

# Frontend (Vue) Settings
VITE_API_BASE_URL=http://backend:8000

# OpenTelemetry / Grafana Tempo
OTEL_SERVICE_NAME=leadconverter-pro-backend
OTEL_EXPORTER_OTLP_ENDPOINT=https://tempo.example.com:443/v1/traces
OTEL_EXPORTER_OTLP_HEADERS=Authorization=Basic YOUR_TOKEN
VITE_OTEL_EXPORTER_OTLP_ENDPOINT=${OTEL_EXPORTER_OTLP_ENDPOINT}
